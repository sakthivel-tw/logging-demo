<configuration>
    <appender name="CLOUD" class="com.google.cloud.logging.logback.LoggingAppender">
        <!-- Optional : filter logs at or above a level -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <log>application.log</log> <!-- Optional : default java.log -->
        <resourceType>gae_app</resourceType> <!-- Optional : default: auto-detected, fallback: global -->
        <enhancer>com.demo.ExampleEnhancer</enhancer>
        <flushLevel>WARN</flushLevel> <!-- Optional : default ERROR -->
<!--        <encoder>-->
<!--            <pattern>%d | [%X{X-B3-TraceId},%X{X-B3-SpanId},%X{X-B3-ParentSpanId},%X{X-Span-Export}] | %-5level [%thread] %logger{0}: %msg%n</pattern>-->
<!--            <outputPatternAsHeader>true</outputPatternAsHeader>-->
<!--        </encoder>-->
    </appender>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!--        <layout class="ch.qos.logback.classic.PatternLayout">-->
        <!--            <Pattern>-->
        <encoder>
            <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSSZ} | [%X{X-B3-TraceId},%X{X-B3-SpanId},%X{X-B3-ParentSpanId},%X{X-Span-Export}] | %-8.8p| [%t] | %c{3}
                | %m%n
            </Pattern>
        </encoder>
    </appender>
    <root level="debug">
        <appender-ref ref="CLOUD" />
        <appender-ref ref="STDOUT" />
    </root>
</configuration>